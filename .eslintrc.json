{
    "extends": "airbnb",
    "env": {
        "commonjs": true,
        "node": true,
        "mocha": true
    },
    "plugins": [
        "chai-friendly"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "indent": ["error", 4],
        "comma-dangle": ["error", "never"],
        "no-unused-expressions": 0,
        "chai-friendly/no-unused-expressions": 2
    }
}